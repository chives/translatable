{
    "name": "fsi/translatable",
    "license": "proprietary",
    "type": "library",
    "description": "A library for handling translations",
    "autoload": {
        "psr-4": {
            "FSi\\Component\\Translatable\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\FSi\\": "tests/_support",
            "Tests\\FSi\\App\\": "tests/_support/project/src",
            "Tests\\FSi\\Component\\Translatable\\": [
                "tests/functional",
                "tests/unit"
            ]
        }
    },
    "require": {
        "php": "^7.4|^8.0",
        "ext-intl": "*",
        "beberlei/assert": "^3.2"
    },
    "require-dev": {
        "ext-pdo_sqlite": "*",
        "codeception/codeception": "^4.0",
        "codeception/lib-asserts": "^1.1",
        "codeception/module-asserts": "^1.1",
        "codeception/module-doctrine2": "^1.0",
        "codeception/module-symfony": "^2.0",
        "doctrine/doctrine-bundle": "^2.4",
        "doctrine/orm": "^2.9",
        "doctrine/persistence": "^1.3|^2.0",
        "guzzlehttp/psr7": "^1.5",
        "monolog/monolog": "^1.25",
        "phpstan/phpstan": "^0.12.94",
        "phpstan/phpstan-beberlei-assert": "^0.12.6",
        "phpstan/phpstan-doctrine": "^0.12.42",
        "phpstan/phpstan-phpunit": "^0.12.21",
        "squizlabs/php_codesniffer": "^3.6",
        "symfony/config": "^4.4|^5.3",
        "symfony/dependency-injection": "^4.4|^5.3",
        "symfony/form": "^4.4|^5.3",
        "symfony/framework-bundle": "^4.4|^5.3",
        "symfony/http-foundation": "^4.4|^5.3",
        "symfony/http-kernel": "^4.4|^5.3",
        "symfony/routing": "^4.4|^5.3",
        "symfony/translation": "^4.4|^5.3",
        "symfony/twig-bundle": "^4.4|^5.3",
        "symfony/validator": "^4.4|^5.3",
        "twig/twig": "^2.12|^3.3"
    },
    "scripts": {
        "sniffer": "vendor/bin/phpcs",
        "stan": "vendor/bin/phpstan  --ansi analyse -c phpstan.neon",
        "cept": "vendor/bin/codecept --ansi",
        "func": "vendor/bin/codecept --ansi run functional",
        "unit": "vendor/bin/codecept --ansi run unit",
        "cl": "tests/_support/project/bin/console --ansi",
        "db": [
            "tests/_support/project/bin/console --ansi doctrine:schema:drop --force",
            "tests/_support/project/bin/console --ansi doctrine:database:create",
            "tests/_support/project/bin/console --ansi doctrine:schema:create"
        ]
    },
    "config": {
        "bin-dir": "vendor/bin",
        "process-timeout": 0,
        "sort-packages": true
    }
}
